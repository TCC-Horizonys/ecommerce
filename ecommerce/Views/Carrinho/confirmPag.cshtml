<!-- Modal de sucesso (autoabre) -->
<div class="s-backdrop" id="sBackdrop"></div>

<div class="s-modal" id="sModal" role="dialog" aria-modal="true">
    <button class="s-close" id="sClose" aria-label="Fechar">×</button>

    <div class="s-card">
        <div class="s-check">
            <svg viewBox="0 0 48 48" width="76" height="76" aria-hidden="true">
                <circle cx="24" cy="24" r="21" fill="none" stroke="currentColor" stroke-width="3" />
                <path d="M15 24.5l6 6 12-14" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
        </div>

        <div class="s-text">PAGAMENTO REALIZADO COM<br />SUCESSO</div>
    </div>
</div>

<style>
    :root{ --bg:#B18469; --card:#F5EEDF; --ink:#1c1c1c; }
    .s-backdrop{ position:fixed; inset:0; background:var(--bg); opacity:0; pointer-events:none; transition:opacity .2s; }
    .s-modal{ position:fixed; inset:0; display:grid; place-items:center; opacity:0; pointer-events:none; transition:opacity .2s; }
    .s-modal.show, .s-backdrop.show{ opacity:1; pointer-events:auto; }
    .s-card{
      background:var(--card); color:var(--ink);
      width: min(420px, 86vw); border-radius:10px;
      box-shadow:0 18px 40px rgba(0,0,0,.25);
      padding:28px 22px 26px; text-align:center;
      position:relative;
    }
    .s-close{
      position:fixed; right:18px; top:12px;
      width:32px; height:32px; border:none; background:transparent;
      font-size:26px; color:#000; line-height:32px; cursor:pointer;
    }
    .s-check{ display:grid; place-items:center; margin-bottom:10px; }
    .s-text{
      font-family:"Cinzel","Cormorant Garamond",serif;
      letter-spacing:.04rem; font-size:14px;
    }
</style>

<script>
    (() => {
      const modal = document.getElementById('sModal');
      const back  = document.getElementById('sBackdrop');
      const close = document.getElementById('sClose');

      // abre automaticamente
      requestAnimationFrame(() => { modal.classList.add('show'); back.classList.add('show'); });

      const fechar = () => { modal.classList.remove('show'); back.classList.remove('show'); };
      close.addEventListener('click', fechar);
    })();
</script>
