@model ecommerce.Models.Produto
@{
    ViewData["Title"] = Model.Nome;
}

<div class="container py-4">
    <div class="row g-4 align-items-start">
        <div class="col-md-5">
            <div class="p-3 bg-white rounded shadow-sm">
                <img src="@Url.Content("~/img/" + Model.Imagens?.FirstOrDefault()?.Url)"
                     alt="@Model.Nome" class="img-fluid" />
            </div>
        </div>

        <div class="col-md-7">
            <div class="p-3 bg-light rounded shadow-sm">
                <h3 class="text-center mb-3" style="font-family:'Cinzel',serif;">
                    @Model.Nome
                </h3>
                <p class="small text-muted" style="text-align:justify;">
                    @Model.Descricao
                </p>
            </div>

            <h4 class="mt-3 fw-bold">R$ @Model.Preco.ToString("N2")</h4>

            <form asp-controller="Carrinho"
                  asp-action="Adicionar"
                  method="post"
                  asp-route-next="index"
                  class="mt-3">
                @Html.AntiForgeryToken()
                <input type="hidden" name="produtoId" value="@Model.Id" />
                <input type="hidden" name="quantidade" value="1" />
                <button type="submit" class="btn btn-outline-secondary px-4 py-2">
                    ADICIONAR AO CARRINHO
                </button>
            </form>


        </div>
    </div>
</div>
