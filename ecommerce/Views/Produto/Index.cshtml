@using Microsoft.AspNetCore.Html
@model List<ecommerce.Models.Produto>

@{
    int pagIndex = (int)ViewData["PagIndex"];
    int totalPag = (int)ViewData["TotalPag"];
    string buscar = (string)ViewData["Buscar"]!;
    string coluna = (string)ViewData["Coluna"]!;
    string ordPor = (string)ViewData["OrdPor"]!;

    HtmlString getArrow(string tblColuna)
    {
        if (tblColuna != coluna) return new HtmlString("");
        return new HtmlString(ordPor == "desc" ? "<i class='bi bi-arrow-down'></i>" : "<i class='bi bi-arrow-up'></i>");
    }
}

<section class="antq-admin-wrap">

    <div class="antq-admin-header">
        <h2>Produtos</h2>
        <a class="btn-pill" asp-controller="Produto" asp-action="Criar">Adicionar Produto</a>
    </div>

    <div class="antq-admin-card">
        <div class="antq-toolbar">
            <form class="antq-search" role="search">
                <input type="search" name="buscar" value="@buscar" placeholder="Buscar produto" />
                <button type="submit" id="submit">Buscar</button>
            </form>
        </div>

        <script>
            function sortTable(coluna) {
                let ordPor = "desc";
                let colunaAtual = "@coluna";
                let ordemAtual = "@ordPor";
                if (coluna === colunaAtual) ordPor = (ordemAtual === "asc") ? "desc" : "asc";
                window.location.href = `?buscar=@buscar&coluna=${coluna}&ordPor=${ordPor}&pagIndex=1`;
            }
        </script>
       <div class="table-responsive">
            <table class="antq-table">
                <thead>
                    <tr>
                        <th onclick="sortTable('Id')">ID @getArrow("Id")</th>
                        <th onclick="sortTable('Nome')">NOME @getArrow("Nome")</th>
                        <th onclick="sortTable('Categoria')">CATEGORIA @getArrow("Categoria")</th>
                        <th>DESCRICAO</th>
                        <th onclick="sortTable('Preco')">PREÇO @getArrow("Preco")</th>
                        <th>ESTADO DE CONSERVAÇÃO</th>
                        <th>IMAGEM</th>
                        <th>AÇÃO</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var produto in Model)
                    {
                        <tr>
                            <td>@produto.Id</td>
                            <td class="col-nome">@produto.Nome</td>
                            <td>@produto.Categoria</td>
                            <td class="col-desc" title="@produto.Descricao">
                                @((produto.Descricao?.Length > 120)
                                    ? produto.Descricao.Substring(0, 120) + "…"
                                    : produto.Descricao)
                            </td>
                            <td>@produto.Preco.ToString("C")</td>
                            <td>@produto.EstadoConservacao</td> @* ajuste o nome da propriedade se for diferente *@
                            <td>
                                <img src="@Url.Content("~/img/" + (produto.Imagens.FirstOrDefault()?.Url ?? "placeholder.png"))" alt="@produto.Nome" />
                            </td>
                            <td class="col-acoes">
                                <a class="chip" asp-controller="Produto" asp-action="Editar" asp-route-id="@produto.Id">Editar</a>
                                <form asp-action="Deletar" asp-route-id="@produto.Id" method="post">
                                    <button type="submit" class="chip chip-outline" onclick="return confirm('Tem certeza que deseja excluir este produto?')">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>


        <nav class="antq-pager">
            <ul>
                @for (int i = 1; i <= totalPag; i++)
                {
                    var ativo = i == pagIndex ? "active" : "";
                    <li class="@ativo">
                        <a href="?pagIndex=@i&buscar=@buscar&coluna=@coluna&ordPor=@ordPor">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</section>

